<p>トレーニング開始画面(仮)</p>
<div id="mouse_txt" style="position:absolute; visibility:hidden; font-size:0.8em; background-color:#FFFFFF; border-style:ridge;"></div>

<div style="text-align: center">
  <img id="kinniku" src="/kinniku.png" width="1000px">
</div>
  
  <script>
    // 定義
    const kinniku = document.getElementById("kinniku");
    const mouse_txt = document.getElementById("mouse_txt");

    document.getElementById( "kinniku" ).onclick = function( event ) {
      var clickX = event.pageX ;
	    var clickY = event.pageY ;

	    // 要素の位置を取得
	    var clientRect = this.getBoundingClientRect() ;
	    var positionX = clientRect.left + window.pageXOffset ;
	    var positionY = clientRect.top + window.pageYOffset ;

    	// 要素内におけるクリック位置を計算
	    var x = clickX - positionX ;
	    var y = clickY - positionY ;
      console.log("クリックした位置のX座標は")
      console.log(x)
      console.log("クリックした位置のY座標は")
      console.log(y)

      if ((x - 172)*(x - 172) + (y - 191)*(y - 191) < 361) {
        window.location.href = "https://fbfdee68fd364ffea1261e6df44cc822.vfs.cloud9.ap-northeast-1.amazonaws.com/shoulder_training"
        console.log("左肩がクリックされました")
      } else if ((x - 348)*(x - 348) + (y - 189)*(y - 189) <100) {
        window.location.href = "https://fbfdee68fd364ffea1261e6df44cc822.vfs.cloud9.ap-northeast-1.amazonaws.com/shoulder_training"
        console.log("右肩がクリックされました")
      } else if ((x - 257)*(x - 257) + (y - 309)*(y - 309) <2500) {
        window.location.href = "https://fbfdee68fd364ffea1261e6df44cc822.vfs.cloud9.ap-northeast-1.amazonaws.com/abdominal_muscle_training"
        console.log("腹筋がクリックされました")
      } else if ((x - 31)*(x - 31) + (y - 336)*(y - 336) <93025) {
        window.location.href = "https://fbfdee68fd364ffea1261e6df44cc822.vfs.cloud9.ap-northeast-1.amazonaws.com/leg_training"
        console.log("脚がクリックされました")
       
      }

    }


    kinniku.addEventListener("mousemove", function(event) {
      var clickX = event.pageX ;
	    var clickY = event.pageY ;

	    // 要素の位置を取得
	    var clientRect = this.getBoundingClientRect() ;
	    var positionX = clientRect.left + window.pageXOffset ;
	    var positionY = clientRect.top + window.pageYOffset ;

	    // 要素内におけるクリック位置を計算
	    var x = clickX - positionX ;
	    var y = clickY - positionY ;
	    
      if ((x - 172)*(x - 172) + (y -191)*(y - 191) < 361) {
        mouse_txt.innerHTML = "ここは肩です";
        mouse_txt.style.visibility = "visible"
        mouse_txt.style.left = x
        mouse_txt.style.top = y
      } else if ((x - 348)*(x - 348) + (y -189)*(y - 189) < 100) {
        mouse_txt.innerHTML = "ここは肩です";
        mouse_txt.style.visibility = "visible"
        mouse_txt.style.left = x
        mouse_txt.style.top = y
      } else if ((x - 257 )*(x - 257) + (y - 309)*(y - 309) < 2500) {
        mouse_txt.innerHTML = "ここは腹筋です";
        mouse_txt.style.visibility = "visible"
        mouse_txt.style.left = x
        mouse_txt.style.top = y
      } else {
        mouse_txt.style.visibility = "hidden"
      }
    })
    

  </script>

